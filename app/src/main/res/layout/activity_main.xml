<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_main">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:name="com.huangbop.mixi.fragment.BottomFragment"
            android:id="@+id/fragment"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:layout="@layout/fragment_bottom"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:name="com.huangbop.mixi.fragment.HeaderFragment"
            android:id="@+id/fragment2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:layout="@layout/fragment_header"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.huangbop.mixi.fragment.ProductFragment"
            android:id="@+id/fragment3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fragment2"
            android:layout_above="@+id/fragment"
            tools:layout="@layout/fragment_product"/>

    </RelativeLayout>
</RelativeLayout>
